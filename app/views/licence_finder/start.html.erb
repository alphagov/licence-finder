<% content_for :page_class do %>start-page<% end %>

<div class="article-container group">
  <article role="article" class="group">
    <div class="inner">

      <section class="intro">
        <div class="get-started-intro">
          <p>You may need a licence for:</p>

          <ul>
            <li>some business activities</li>
            <li>other activities, eg street parties</li>
          </ul>

          <p>Use this tool to find out which licences you may need.</p>
        </div>

        <p id="get-started" class="get-started">
        <%= link_to sectors_path, :class => "big button" do %>
          Find licences
        <% end %>
        </p>
      </section>

      <%- if @popular_licences.any? -%>
        <div class="popular-licences">
          <h2>Popular licences</h2>
          <ol>
            <%- @popular_licences.each do |licence| -%>
              <li>
                <%= render :partial => 'licence', :object => licence %>
              </li>
            <%- end -%>
          </ol>
        </div>
      <%- end -%>
    </div>
  </article>
</div>
